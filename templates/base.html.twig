{# templates/base.html.twig #}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Sentinel{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body class="bg-body-tertiary">

<header class="border-bottom bg-white">
    <nav class="navbar navbar-expand-lg container py-2">
        <a class="navbar-brand fw-semibold" href="{{ path('app_home') }}">
            Sentinel
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Projects</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#" aria-disabled="true">Global config</a>
                </li>
            </ul>

            <div class="d-flex gap-2">
                <span class="badge text-bg-light border">With ❤️ by ninsuo</span>
            </div>
        </div>
    </nav>
</header>

<main class="container my-4">
    {% block breadcrumb %}{% endblock %}

    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<footer class="container py-4 text-secondary small">
    <div class="d-flex justify-content-between border-top pt-3">
        <span>© {{ "now"|date("Y") }} Sentinel</span>
        <span class="text-muted">Because humans are lazy.</span>
    </div>
</footer>

{% block javascripts %}
    {{ importmap('app') }}
{% endblock %}
</body>
</html>
