{% extends 'project/_layout.html.twig' %}

{% block project_content %}
    <div class="p-4 bg-white border rounded-3 shadow-sm mb-3">
        <h1 class="h4 fw-semibold mb-2">{{ project.name }}</h1>
        <div class="text-secondary small text-break mb-3">{{ project.path }}</div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="{{ path('app_project_edit', {id: project.id}) }}">
                Edit configuration
            </a>
            <a class="btn btn-primary" href="{{ path('app_feature_new', {id: project.id}) }}">
                Create feature
            </a>

            <a class="btn btn-outline-secondary position-relative"
               href="{{ path('app_feature_trash', {projectId: project.id}) }}">
                Trash
                {% set trashedCount = project.deletedFeatures|length %}
                {% if trashedCount > 0 %}
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill text-bg-danger">
                        {{ trashedCount }}
                    </span>
                {% endif %}
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-semibold">Features</div>

        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Last run</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if features is empty %}
                    <tr>
                        <td colspan="4" class="text-secondary text-center py-5">No features yet.</td>
                    </tr>
                {% else %}
                    {% for feature in features %}
                        {% set latestRun = latest_runs[feature.id] ?? null %}
                        <tr>
                            <td class="fw-semibold">{{ feature.name }}</td>
                            <td class="text-secondary small">
                                {{ latestRun ? latestRun.createdAt|date('Y-m-d H:i') : '-' }}
                            </td>
                            <td>
                                <span class="badge text-bg-light border">
                                    {{ latestRun ? (latestRun.status ?? '-') : '-' }}
                                </span>
                            </td>

                            {% set latestRun = latest_runs[feature.id] ?? null %}

                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   href="{{ path('app_feature_show', {projectId: project.id, featureId: feature.id}) }}">
                                    Open
                                </a>

                                <form method="post"
                                      action="{{ path('app_feature_delete', {projectId: project.id, featureId: feature.id}) }}"
                                      class="d-inline"
                                      onsubmit="return confirm('Delete this feature?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_feature_' ~ feature.id) }}">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>

                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
