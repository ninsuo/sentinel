{% extends 'project/_layout.html.twig' %}

{% block project_content %}
    <div class="p-4 bg-white border rounded-3 shadow-sm mb-3">
        <h1 class="h4 fw-semibold mb-2">{{ project.name }}</h1>
        <div class="text-secondary small text-break mb-3">{{ project.path }}</div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="{{ path('app_project_edit', {id: project.id}) }}">Edit
                configuration</a>
            <a class="btn btn-primary" href="{{ path('app_feature_new', {id: project.id}) }}">Create feature</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-semibold">Features</div>

        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Last run</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% if features is empty %}
                    <tr>
                        <td colspan="4" class="text-secondary text-center py-5">No features yet.</td>
                    </tr>
                {% else %}
                    {% for feature in features %}
                        <tr>
                            <td class="fw-semibold">{{ feature.name }}</td>
                            <td class="text-secondary small">-</td>
                            <td class="text-secondary small">-</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-primary"
                                   href="{{ path('app_feature_show', {projectId: project.id, featureId: feature.id}) }}">Open</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
