{% extends 'project/_layout.html.twig' %}

{% set breadcrumb_items = [
    { label: 'Feature: ' ~ feature.name, url: path('app_feature_show', {projectId: project.id, featureId: feature.id}) },
    { label: 'Run #' ~ run.id, url: path('app_feature_run_select_files', {projectId: project.id, featureId: feature.id, runId: run.id}) },
    { label: 'Prompt review' }
] %}

{% block project_content %}
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div class="fw-semibold">Run prompt review</div>

            <a class="btn btn-sm btn-outline-secondary"
               href="{{ path('app_feature_show', {projectId: project.id, featureId: feature.id}) }}">
                Back
            </a>
        </div>

        <div class="card-body">
            <div class="mb-3">
                <span class="badge text-bg-light border">Status: {{ run.status ?? '-' }}</span>
            </div>

            <div class="row g-3">
                <div class="col-12 col-lg-6">
                    <div class="text-secondary small mb-2">Feature prompt (reference)</div>
                    <div class="border rounded bg-body-tertiary p-2" style="max-height: 320px; overflow:auto;">
                        <pre class="mb-0 small" style="white-space: pre-wrap;">{{ feature.prompt }}</pre>
                    </div>

                    <div class="mt-2">
                        <a class="btn btn-sm btn-outline-secondary"
                           href="{{ path('app_feature_edit', {projectId: project.id, featureId: feature.id}) }}">
                            Edit feature prompt
                        </a>
                    </div>
                </div>

                <div class="col-12 col-lg-6">
                    {{ form_start(form) }}
                    {{ form_row(form.userPrompt) }}

                    <div class="d-flex gap-2">
                        <button class="btn btn-primary">Continue to file selection</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
