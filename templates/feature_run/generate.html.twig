{% extends 'project/_layout.html.twig' %}

{% set breadcrumb_items = [
    { label: 'Feature: ' ~ feature.name, url: path('app_feature_show', {projectId: project.id, featureId: feature.id}) },
    { label: 'Run #' ~ run.id, url: path('app_feature_run_select_files', {projectId: project.id, featureId: feature.id, runId: run.id}) },
    { label: 'Generate patch' }
] %}

{% block project_content %}
    <div class="card shadow-sm mb-3">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div class="fw-semibold">Generate patch</div>

            <div class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('app_feature_run_select_files', {projectId: project.id, featureId: feature.id, runId: run.id}) }}">
                    Back to file selection
                </a>
                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('app_feature_show', {projectId: project.id, featureId: feature.id}) }}">
                    Back to feature
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="row g-3">
                <div class="col-12 col-lg-7">
                    <div class="mb-2 text-secondary small">Prompt</div>

                    <div class="border rounded bg-body-tertiary p-2">
                        <div class="small text-secondary mb-1">Feature prompt</div>
                        <pre class="mb-2 small" style="white-space: pre-wrap;">{{ feature.prompt }}</pre>

                        <div class="small text-secondary mb-1">Run prompt</div>
                        <pre class="mb-0 small" style="white-space: pre-wrap;">{{ run.userPrompt }}</pre>
                    </div>

                    <div class="mt-2">
                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('app_feature_prompt', {projectId: project.id, featureId: feature.id}) }}">
                            Edit feature prompt
                        </a>

                        <a class="btn btn-sm btn-outline-primary"
                           href="{{ path('app_feature_run_prompt', {projectId: project.id, featureId: feature.id, runId: run.id}) }}">
                            Edit run prompt
                        </a>
                    </div>
                </div>

                <div class="col-12 col-lg-5">
                    <div class="mb-2 text-secondary small">Selected files</div>

                    <div class="border rounded bg-white p-2" style="max-height: 360px; overflow:auto;">
                        {% if selected_files is empty %}
                            <div class="text-secondary small p-2">
                                No files selected. Go back and pick some.
                            </div>
                        {% else %}
                            <ul class="list-unstyled mb-0">
                                {% for f in selected_files %}
                                    <li class="py-1 border-bottom">
                                        <div class="small fw-semibold text-break">{{ f.path ?? '-' }}</div>
                                        <div class="small text-secondary">
                                            {{ f.size ?? '?' }} bytes
                                            · {{ (f.sha256 ?? '')|slice(0, 12) }}{% if f.sha256 is defined %}…{% endif %}
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge text-bg-light border">Status: {{ run.status ?? '-' }}</span>
                        </div>

                        <form method="post"
                              action="{{ path('app_feature_run_generate_submit', {projectId: project.id, featureId: feature.id, runId: run.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('generate_run_' ~ run.id) }}">
                            <button class="btn btn-primary" {% if selected_files is empty %}disabled{% endif %}>
                                Generate (stub)
                            </button>
                        </form>
                    </div>

                    {% if run.aiRequestJson %}
                        <hr>
                        <div class="small text-secondary mb-2">Draft request payload (stored)</div>
                        <pre class="small mb-0" style="white-space: pre-wrap;">{{ run.aiRequestJson }}</pre>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-semibold">Next (not implemented yet)</div>
        <div class="card-body text-secondary">
            Patch preview & apply step will go here once the AI provider + diff parser are wired.
        </div>
    </div>
{% endblock %}
