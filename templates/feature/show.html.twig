{% extends 'project/_layout.html.twig' %}

{% set breadcrumb_items = [
    { label: 'Feature: ' ~ feature.name }
] %}

{% block project_content %}
    <div class="p-4 bg-white border rounded-3 shadow-sm mb-3">
        <div class="d-flex justify-content-between align-items-start gap-3">
            <div>
                <h1 class="h4 fw-semibold mb-1">{{ feature.name }}</h1>
                <div class="text-secondary small">Feature prompt</div>
            </div>

            <div class="d-flex gap-2 align-items-start">
                <a class="btn btn-outline-secondary"
                   href="{{ path('app_feature_edit', {projectId: project.id, featureId: feature.id}) }}">
                    Edit
                </a>

                <form method="post"
                      action="{{ path('app_feature_run_new', {projectId: project.id, featureId: feature.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('run_feature_' ~ feature.id) }}">
                    <button class="btn btn-primary">Create run</button>
                </form>
            </div>
        </div>

        <hr>

        <pre class="mb-0 small text-break overflow-auto border rounded p-2 bg-light"
             style="white-space: pre-wrap; max-height: 150px;">{{ feature.prompt }}</pre>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white fw-semibold">Runs</div>

        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Created</th>
                    <td>Prompt</td>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for run in runs %}
                    <tr>
                        <td class="fw-semibold">#{{ run.id }}</td>
                        <td class="text-secondary small">{{ run.createdAt|date('Y-m-d H:i') }}</td>
                        <td>
                            <div class="small text-muted text-break" style="max-width: 600px; display: -webkit-box;-webkit-line-clamp: 3;  -webkit-box-orient: vertical; overflow: hidden;">
                                {% if run.prompt == feature.prompt %}
                                    <em class="text-secondary">(Default feature prompt)</em>
                                {% else %}
                                    {{ run.prompt }}
                                {% endif %}
                            </div>
                        </td>
                        <td><span class="badge text-bg-light border">{{ run.status ?? '-' }}</span></td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-primary"
                               href="{{ path('app_feature_run_generate', {projectId: project.id, featureId: feature.id, runId: run.id}) }}">
                                Open
                            </a>

                            <form method="post"
                                  action="{{ path('app_feature_run_delete', {projectId: project.id, featureId: feature.id, runId: run.id}) }}"
                                  class="d-inline"
                                  onsubmit="return confirm('Delete run #{{ run.id }}?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_run_' ~ run.id) }}">
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
